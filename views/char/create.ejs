<div class="create">
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="class-tab" data-toggle="tab" href="#class" role="tab" aria-controls="class" aria-selected="true">Class</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="race-tab" data-toggle="tab" href="#race" role="tab" aria-controls="race" aria-selected="false">Race</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="abilityScore-tab" data-toggle="tab" href="#abilityScore" role="tab" aria-controls="abilityScore" aria-selected="false">Ability Score</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="class" role="tabpanel" aria-labelledby="class-tab">
    <% for(let i = 0; i < allClasses.length; i++) { %>
      <% className = allClasses[i] %>
      <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
  <%=className.name%>
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%=className.name%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%=allClasses[0].desc %>
            <p>Hit Dice:</p><%=allClasses[0].hitDice %>
            <p>First Level HP:</p><%=allClasses[0].firstLevelHp %>
            <p>HP after 1st Level:</p><%=allClasses[0].moreLevelHp %>
            <p>Armor Proficiency:</p><%=allClasses[0].profArmor %>
            <p>Weapon Proficiency:</p><%=allClasses[0].profWeapons %>
            <p>Tool Proficiency:</p><%=allClasses[0].profTools %>
            <p>Saving Throws:</p><%=allClasses[0].profSaveThrow %>
            <p>Skill Proficiency:</p><%=allClasses[0].profSkills %>
            <p>Equipment:</p><%=allClasses[0].equipment %>
           <p>Spellcasting Ability Modifier:</p> <%=allClasses[0].spellcastingAbil %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
    <% } %>
    <form action="/char/create" method="POST">
      <div class="form-group">
       <select class="form-control" id="class" onchange="this.form.submit()" name="class">
       <label for="class">Select a class: </label>
        <% for(let i = 0; i < allClasses.length; i++) { %>
          <% className = allClasses[i] %>
          <option value="<%=className.name%>"><%=className.name%></option>
        <% } %>
       </select>
      </div>
    </form>
  </div>
  <div class="tab-pane fade" id="race" role="tabpanel" aria-labelledby="race-tab">...</div>
  <div class="tab-pane fade" id="abilityScore" role="tabpanel" aria-labelledby="abilityScore-tab">...</div>
</div>
