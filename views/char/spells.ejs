<h4>Spells</h4>

<div class="create">
    <div class="separate">
        <p>Click to find out more about the <a href="http://dnd5e.wikidot.com/<%=classInfo%>" target="_blank"><%=classInfo%>'s</a> spells per level!</p>
    </div>
<% for(let i = 0; i < spells.length; i++) { %>
    <% spellName = spells[i] %>
<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#<%=spellName.name.split(" ").join("")%>">
    <%=spellName.name%> 
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="<%=spellName.name.split(" ").join("")%>" tabindex="-1" aria-labelledby="<%=spellName.name%>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="<%=spellName.name.split(" ").join("")%>"><%=spellName.name%></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <p><b>School:</b><%=spellName.type%></p>
            <p><b>Level:</b><%=spellName.level%></p>
            <p><b>Cast Time:</b><%=spellName.castTime%></p>
            <p><b>Range:</b><%=spellName.range%></p>
            <p><b>Components:</b><%=spellName.components%></p>
            <p><b>Duration:</b><%=spellName.duration%></p>
            <p><%=spellName.desc%></p>  
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% } %>
</div>
